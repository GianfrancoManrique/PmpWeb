<form class="form-horizontal" method="POST" action="/Usuario/Actualizar/<%=usuario.id%>">
<div class="container">	
	<fieldset>
	 <div class="content-page">
		  <div class="content">
			<div class="container">
				<legend>ADMINISTRADOR</legend>
				<div class="row">					
					<div class="col-lg-6">
						<div class="card-box">
							<br>
							<legend>DATOS PERSONALES</legend>
							<h5>NOMBRES</h5>
							<input type="text" class="form-control" name="nombres" id="txtNombres" value="<%= usuario.nombres %>" required>
							<h5>APELLIDOS</h5>
							<input type="text" class="form-control" name="apellidos" id="txtApellidos" value="<%= usuario.apellidos %>" required>
							<h5>TIPO DOC.</h5>
							<select name="tipodoc" id="lstTipoDoc" class="form-control">
										<option value="-1">Elija tipo doc.</option>
										<% for (var i = 0; i<tiposDoc.length; i++) { %>
											<% if(usuario.tipodoc==tiposDoc[i].id){%>
											<option value="<%= tiposDoc[i].id %>" selected><%= tiposDoc[i].nombre %></option>
											<% } else {%>
											<option value="<%= tiposDoc[i].id %>"><%= tiposDoc[i].nombre %></option>	
											<% } %>			
										<% } %>
							</select>
							<h5>NUMERO DOC.</h5>
							<input type="number" class="form-control" name="numdoc" id="txtNumero" value="<%= usuario.numdoc %>" required>
							<h5>CORREO</h5>
							<input type="email" class="form-control" name="correo" placeholder="usuario@dominio.com" id="txtCorreo" value="<%= usuario.correo %>" required>
							<h5>CARGO</h5>
							<input type="text" class="form-control" name="cargo" id="txtCargo" value="<%= usuario.cargo %>">
							<br>
						</div>
					</div>
					<div class="col-lg-6">
						<div class="card-box">							
							<input type="text" name="municipio" id="txtMunicipio" value="<%= usuario.municipio %>" hidden>
							<input type="text" name="usuario" id="txtId" value="<%= usuario.id %>" hidden>
							<br>
							<legend>MUNICIPIO</legend>
							<h5>DEPARTAMENTO</h5>
							<input type="text" class="form-control"  name="" value="<%= municipio.departamento %>" disabled>	
							<h5>PROVINCIA</h5>
							<input type="text" class="form-control"  name="" value="<%= municipio.provincia %>" disabled>
							<h5>DISTRITO</h5>			
							<input type="text" class="form-control"  name="" value="<%= municipio.distrito %>" disabled>                  																	
							<br>														
						</div>
					</div>
				</div>			
			</div>
		  </div>
	 </div>		
	<br>
	</fieldset>
</div>
<br>
<div class="container">
	  <div class="content-page">
		   <div class="content">
			<div class="container">
				<div class="row">
					<div class="col-lg-6">
						<br>
						<div class="card-box">
							<legend>RESOLUCION Y/O CONTRATO</legend>
							<h5>CODIGO</h5>
							<input type="text" class="form-control" name="resolucion" id="txResolucion" value="<%= usuario.resolucion %>">
							<h5>FECHA</h5>
							<input type="text" class="form-control" name="fecresolucion" id="txtFecResol" value="<%= usuario.fecresolucion %>">							
							<br>	
						</div>
					</div>
					<div class="col-lg-6">
						<br>
						<div class="card-box">
							 <legend>CREDENCIALES</legend>
							 <h5>USUARIO</h5>
							 <input type="text" class="form-control" name="usuario" id="txtUsuario" value="<%= usuario.usuario %>" disabled>
							 <h5>CONTRASEÃ‘A</h5>
							 <input type="text" class="form-control" name="contrasena" id="txtContrasena" value="<%= usuario.contrasena %>" disabled>
							 <h5>HABILITADO</h5>
							 <% if(usuario.habilitado){ %>
							<input type="checkBox" name="habilitado" id="chkHabilitado" checked="checked">
							<% } else {%>
							<input type="checkBox" name="habilitado" id="chkHabilitado">
							<% } %>
						</div>
					</div>
				</div>
			</div>
		  </div>
	 </div>
</div>
<br>	
<div class="container">	
<button id="btnActualizar" class="btn btn-success" type="submit">Guardar</button>
<button id="btnEliminar" class="btn btn-danger" type="submit">Eliminar</button>
</div>
</form>

<script src="/js/jquery.min.js"></script>
<script type="text/javascript" src="/js/Usuario/AdminEditar.js"></script>	
