<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
<% include ../partials/header.ejs%>

<% if(noticia){ %>
    <section class="setImage">
        <div class="container-fluid">
            <div class="row">
                <div class="container-overlay">    
                    <div class="title-summary">
                        <h1><%= noticia.titulo%></h1>
                        <h2><%= noticia.resumen%></h2>
                    </div>
                </div>
            </div>
        </div>
    </section>
<%}%>


<main class="container-noticia-id">    
    <div class="container">
        <div class="row">
            <!--titulo-->
            <div class="col-md-8">
                <div class="noticia-selected">
                    <% if (noticia) {%>
                        <!--<%= noticia.id%>-->
                        <!--<h1><%= noticia.titulo%></h1>-->
                        <p class="noticia-date">PUBLICADO :  <%= noticia.feccreado%></p>
                        <!--<%= noticia.distrito%> |-->
                        <figure>
                            <img class="img-responsive getImage" src="<%= noticia.foto%>" alt="">
                        </figure>
                        <div class="noticia-contenido">
                            <%- noticia.contenido%>
                        </div>
                    <% } else {%>
                        <div class="not-found-noticia" style="text-align:center">
                            <img src="/images/pagina-no-encontrada.png" alt="">
                            <p> <strong>ohh!</strong> no encontramos la notica </p>
                        </div>
                    <% }%>
                </div>
            </div>
            <div class="col-md-4">
                <div class="container-last-noticie">
                
                    <!--titulo-->
                    <div class="sidebar-title">
                        <p><strong>Ultimas Noticias</strong></p>
                    </div>
                    <!--cuerpo-->
                    <div class="noticia-content">
                            <% noticiasMun.forEach(function(noticiaMun){ %>
                                <div class="noticie-item">
                                    <div class="noticie-item-first">
                                        <img class="img-responsive" src="<%= noticiaMun.foto%>" alt="Imagen Noticia">
                                    </div>
                                    <div class="noticie-item-last">
                                        <p style="overflow:hidden"><strong style="float:left"><%= noticiaMun.distrito%></strong><span style="float:right"><%= noticiaMun.feccreado %></span></p>
                                        <p><a class="noticie-item-a" href="<%= noticiaMun.id%>"><%= noticiaMun.titulo %></a></p>
                                    </div>
                                </div>
                            <% }) %>
                            
                            <!-- <div class="noticie-item row-eq-height">
                                <div class="col-md-4 col-sm-3 col-xs-3 img-equal">
                                    <img class="img-rpsv" src="http://placehold.it/150x150" alt="">
                                </div>
                                <div class="col-md-8 col-sm-9 col-xs-9">
                                    <p style="overflow:hidden"><strong style="float:left">Huaura</strong><span style="float:right">03-04-2017</span></p>
                                    <p><a class="noticie-item-a" href="">Alan García: Investigados por caso Lava Jato en Brasil lo señalan</a></p>
                                </div>
                            </div> -->
                    </div>
                </div>
                <!--<img class="img-responsive" src="/images/sidebar.png" alt="Sidebar" style="margin-top: 20px">-->
            </div>
        </div>
    </div>
</main>

<script src="https://code.jquery.com/jquery-2.2.4.min.js"></script>
<script>
    $(document).ready(function(){
        var getImage= $('.getImage').attr('src');
        console.log(getImage);
        if(getImage != undefined){
            $('.setImage').css({
            'background-image':'url('+getImage+')'
            });
        }else {
            
        }
    });
</script>
<% include ../partials/footer.ejs%>