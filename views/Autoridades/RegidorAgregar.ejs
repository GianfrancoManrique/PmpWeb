<div class="container">

	<form class="form-horizontal" method="POST" action="/Regidor/Registrar" enctype="multipart/form-data">
	<fieldset>		
		<div class="content-page">
		  <div class="content">
			<div class="container">
				<legend>Registrar Regidor</legend>	
					<div class="row">
						<input type="text" id="txtIdMunicipio" name="municipio" value="<%=municipio %>" hidden>
						<br>
						<div class="form-group">
				<label class="control-label col-sm-2" for="nomRegidor" >NOMBRES</label>
			    <div class="col-sm-8">
			   		<input type="text" class="form-control" name="nombres" id="txtNomRegidor" required>
			    </div>				
			</div>

			<div  class="form-group">
				<label class="control-label col-sm-2" for="apellidos">APELLIDOS</label>
				<div class="col-sm-8"> 
					<input type="text" class="form-control" name="apellidos" id="txtApellRegidor" required>
				</div>	
			</div>

			<div class="form-group">
				<label for="fImgContenido" class="control-label col-sm-2">FOTO</label>
				<div class="col-sm-8">
					<form enctype="multipart/form-data" id="frmFoto">      
							<input type="file" class="file" id="fotoRegidor" name="fotoRegidor" data-show-upload="false" required>
							<div id="errorBlock" class="help-block"></div>
					</form>
				</div>				
			</div>
            <div class="form-group"> 
                <div class="col-sm-offset-2 col-sm-10">
                <div class="checkbox">
                    <label><input type="checkbox" id="cbHabilitado" name="habilitado" checked> Habilitado</label>
                </div>
                </div>
	        </div>
			<div>
				<label class="control-label col-sm-2"></label>
				<button id="btnGuardarRegidor" class="btn btn-success">Guardar</button>
			</div>		
					</div>
			</div>
		  </div>
		</div>
	</fieldset>
	</form>
</div>

<script type="text/javascript" src="/js/Autoridades/RegidorAgregar.js"></script>
