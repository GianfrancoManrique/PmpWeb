<body>



	<% include ../partials/header-with-background-image.ejs %>


	<div class="container-fluid municipalidades">

        <div class="container">
            <h1 class="title-index"><span>MUNICIPIOS</span> MÁS BUSCADOS</h1>

            <div class="slick">
                <% municipios.forEach(function(municipio){ %>
                <div class="muni-box">
                    <a href="/Perfil/<%= municipio.id %>" class="muni-portada">
                        <img src="/images/muni-default.jpg" alt="">
                    </a>
                    <img class="icon-muni" src="/images/muni-icon.svg" alt="">
                    <h2>Municipio de</h2>
                    <a href="/Perfil/<%= municipio.id %>"><h1><%= municipio.distrito %></h1></a>
                </div>
                <% }) %>
            </div>
        </div>


	</div>


    <div class="container-fluid noticias">

        <div class="container">
            <h1 class="title-index"><span>ÚLTIMAS</span> NOTICIAS</h1>
            <div class="muni-noti">
                <% noticias.forEach(function(noticia){ %>
                <div class="noti-box">
                    <div class="noti-port">
                        <% if (noticia) { %>
                            <% if (noticia.foto != null) { %>
                                <a href="/Noticias/<%= noticia.id %>"><img src=<%=noticia.foto%> alt=""></a>
                            <% } else { %>
                                <a href="/Noticias/<%= noticia.id %>"><img src="http://placehold.it/280x171" alt=""></a>
                            <% } %> 
                        <% } %>
                    </div>
                    <div class="noti-data">
                        <a href="/Noticias/<%= noticia.id %>" class="noti-title"><h1><%=: noticia.titulo | upcase %></h1></a>
                        <div class="noti-fecha">
                            <span><%= noticia.distrito%></span><span><%= noticia.feccreado%></span>
                        </div>
                        <p class="noti-res"><%= noticia.resumen %>.</p>
                    </div>
                    <div class="noti-btn">
                        <a href="/Noticias/<%= noticia.id %>" class="btn-more">Ver más</a>
                    </div>
                </div>
                <% }) %>
            </div>

        </div>




    </div>




    <!-- Modal -->
    <div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header" style="text-align: center">
                    <img src="/images/logo-admin.svg" height="80px" alt="">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form action="/Login" method="post" role="form">

                        <div class="form-group">
                            <label for="usuario">Usuario</label>
                            <input type="text" class="form-control" id="txtUsuario" name="usuario" placeholder="Usuario" >
                        </div>
                        <div class="form-group">
                            <label for="usuario">Contraseña</label>
                            <input type="password" class="form-control" id="txtContrasena" name="contrasena" placeholder="Contraseña">
                        </div>
                        <button type="submit" id="btnIngresar" class="btn btn-success">Ingresar</button>
                    </form>
                </div>

            </div>
        </div>
    </div>


    <div class="container links-admin">
        <ul>
            <li><a href="javascript:void(0)" data-toggle="modal" data-target="#exampleModalLong">Administradores</a></li>
            <li><a href="">FAQ</a></li>
            <li><a href="">Descargar Tesis</a></li>
        </ul>
    </div>

