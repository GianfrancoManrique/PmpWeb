<% include ../partials/header.ejs%>

<div class="profile-header">
    <div class="container">
        <div class="row">
            <div class="col-sm-8">
                <div class="profile-header-left">
                    <h1><%= municipio.distrito %></h1>
                    <% if(municipio.lema !== ""){ %>
                    <p><%= municipio.lema %></p>
                    <% } %>
                    <div class="mail-url">
                         <% if(municipio.correo !== ""){ %>
                        <a href="mailto:<%= municipio.correo %>"><i class="fa fa-envelope-o" aria-hidden="true"></i><span><%= municipio.correo %></span></a>
                        <% } %>
                        <% if(municipio.url !== ""){ %>
                        <a style="display:none" id="url" href="<%= municipio.url %>"><i class="fa fa-link" aria-hidden="true"></i><%= municipio.url %></a>
                        <a id="urlNew"href="<%= municipio.url %>" target="_blank"></a>
                        <% } %>
                    </div>
                </div>
            </div>
            <div class="col-sm-4 visible-md visible-lg">
                <div class="profile-social-networks">
                    <div class="container-social" style="float:right">
                    <% if(municipio.urlFacebook !== ""){%>
                        <a href="<%= municipio.urlFacebook %>" target="_blank"><i class="fa fa-facebook" aria-hidden="true"></i></a>
                    <% } %>
                    <% if(municipio.urlTwitter !== ""){%>
                        <a href="<%= municipio.urlTwitter %>" target="_blank"><i class="fa fa-twitter" aria-hidden="true"></i></a>    
                    <% } %>
                    <% if(municipio.urlYoutube !== ""){%>
                        <a href="<%= municipio.urlYoutube %>" target="_blank"><i class="fa fa-youtube" aria-hidden="true"></i></a>
                    <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>  
</div>

<section class="container-profile-municipio" >
    <div class="container">
        <div class="row">
            <div class="col-md-4 mg-bottom">
                <div class="profile-alcalde">
                    <% if(alcalde){ %>
                        <p>Alcalde</p>
                        <div class="image-profile">
                            <% if(alcalde.foto !== ""){ %>
                                <img class="img-rpsv" src="<%= alcalde.foto %>" alt="Imagen Alcalde">
                            <% } else { %>
                                <img class="img-rpsv" src="/images/user-default.svg" alt="Imagen Alcalde">
                            <% } %>
                        </div>

                            <% if(alcalde.nombre !== "" && alcalde.apellido !== "" ){ %>
                                <h2><%= alcalde.nombres %> <%= alcalde.apellidos %></h2>
                            <% } else { %>
                                 <h2> No tenemos el nombre del alcalde</h2>
                            <% } %>
                        
                            <% if(alcalde.resena !== "" ){ %>
                                <div class="profile-btn">
                                    <a href="#test-popup" class="btn-more-information open-popup-link">Más información</a>
                                </div>
                            <% } %>

                            <div id="test-popup" class="white-popup mfp-hide">
                                <h3>Reseña</h3>
                                <% if(alcalde.resena !== "" ){ %>
                                    <p><%= alcalde.resena %></p>
                                <% } %>
                            </div>
                    <% } else { %>
                        <p>Alcalde</p>
                        <div class="image-profile">
                            <img class="img-rpsv" src="/images/user-default.svg" alt="Imagen Alcalde">
                        </div>
                        <h2>Nombre del alcalde</h2>
                    <% } %>
                </div>
            </div>
            <div class="col-md-8">
                <div class="profile-description">
                    <div class="profile-social-networks visible-xs visible-sm">
                        <div class="container-social">
                        <% if(municipio.urlFacebook !== ""){%>
                        <a href="<%= municipio.urlFacebook %>" target="_blank"><i class="fa fa-facebook" aria-hidden="true"></i></a>
                        <% } %>
                        <% if(municipio.urlTwitter !== ""){%>
                            <a href="<%= municipio.urlTwitter %>" target="_blank"><i class="fa fa-twitter" aria-hidden="true"></i></a>    
                        <% } %>
                        <% if(municipio.urlYoutube !== ""){%>
                            <a href="<%= municipio.urlYoutube %>" target="_blank"><i class="fa fa-youtube" aria-hidden="true"></i></a>
                        <% } %>
                        </div>
                    </div>
                    <% if(municipio.valores !== ""){ %>
                    <div class="profile-valores mg-bottom">
                        <!--<%= municipio.departamento %> > <%= municipio.provincia %> > <%= municipio.distrito %>-->
                        <h3>¿Sabías que?</h3>
                        <p><%= municipio.valores %></p>
                    </div>
                    <% } %>
                </div>

                <div class="profile-vision-mission">
                    <div class="row">
                        <% if(municipio.mision !== ""){ %>
                        <div class="col-sm-6 mg-bottom">
                            <div class="mission">
                                <!--<div class="img-mission" style="text-align:center">
                                    <img src="/images/mission.svg" alt="" width="70">
                                </div>-->
                                <h3>Misión</h3>
                                <p id="readAddMision"><%= municipio.mision %></p>
                            </div>
                        </div>
                        <% } %>
                        <% if(municipio.vision !== ""){ %>
                        <div class="col-sm-6 mg-bottom">
                            <div class="vision">
                                <!--<div class="img-vision" style="text-align:center">
                                    <img src="/images/mission.svg" alt="" width="70">
                                </div>-->
                                <h3>Visión</h3>
                                <p id="readAddVision"><%= municipio.vision %></p>
                            </div>
                        </div>
                        <% } %>
                    </div>
                </div>

                <!--<div class="profile-maps">
                    <div id="contMaps" class="google-maps">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d3915.141010759158!2d-77.61070877116467!3d-11.10286675604985!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1ses!2spe!4v1494899085697" width="100%" height="400" frameborder="0" style="border:0" allowfullscreen></iframe>
                    </div>
                </div>-->

                <!--Teléfonos: 
                    <% municipio.telefonos.forEach(function(telefono){ %>	
                        <% tipos.forEach(function(tipo){ %>	
                            <% if(telefono.tipo==tipo.id){ %>
                                <div><%= tipo.nombre %>-<%= telefono.numero %> </div>	
                            <% } %>           
                        <% }) %>
                <% }) %>-->
            </div>
        </div>
    </div>
</section>

